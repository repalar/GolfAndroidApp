<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScoreMyPuttPutt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_darkest</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/primary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/primaryButton</item>
        <item name="android:textViewStyle">@style/textView</item>
        <item name="android:editTextStyle">@style/editText</item>
    </style>

    <style name="Theme.ScoreMyPuttPutt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ScoreMyPuttPutt.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ScoreMyPuttPutt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="primaryButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_rounded_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="fontFamily">@font/aldrich</item>
    </style>

    <style name="secondaryButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_rounded_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/secondary</item>
        <item name="fontFamily">@font/aldrich</item>
    </style>

    <style name="blackButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_rounded_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
        <item name="fontFamily">@font/aldrich</item>
    </style>

    <style name="textView">
        <item name="android:fontFamily">@font/aldrich</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="editText">
        <item name="android:fontFamily">@font/aldrich</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/text_placeholder</item>
        <item name="backgroundTint">@color/primary</item>
    </style>
</resources>