<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.importtn.scoremyputtputt"
    android:versionCode="1"
    android:versionName="1.0">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScoreMyPuttPutt">
        <activity
            android:name=".Startup"
            android:label="@string/app_name"
            android:theme="@style/Theme.ScoreMyPuttPutt.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayerDetails"
            android:label="@string/app_name"
            android:theme="@style/Theme.ScoreMyPuttPutt.NoActionBar">
        </activity>
        <activity
            android:name=".EnterScore"
            android:label="@string/app_name"
            android:theme="@style/Theme.ScoreMyPuttPutt.NoActionBar">
        </activity>
        <activity
            android:name=".EndScreen"
            android:label="@string/app_name"
            android:theme="@style/Theme.ScoreMyPuttPutt.NoActionBar">
        </activity>
        <activity
            android:name=".Overview"
            android:label="@string/app_name"
            android:theme="@style/Theme.ScoreMyPuttPutt.NoActionBar">
        </activity>
    </application>

</manifest>